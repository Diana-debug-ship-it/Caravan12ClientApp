<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Caravan12" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/sky_darkBlue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="successToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/alegreya_regular</item>
        <item name="stTextSize">16sp</item>
        <item name="stColorBackground">#117A52</item>
        <item name="stSolidBackground">false</item>
        <item name="stIconStart">@drawable/ic_success</item>
        <item name="stLength">LONG</item>
        <item name="stRadius">20dp</item>
    </style>

    <style name="errorToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/alegreya_regular</item>
        <item name="stTextSize">16sp</item>
        <item name="stColorBackground">#E0331F</item>
        <item name="stSolidBackground">false</item>
        <item name="stIconStart">@drawable/ic_error</item>
        <item name="stLength">LONG</item>
        <item name="stRadius">20dp</item>
    </style>

    <style name="infoToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/alegreya_regular</item>
        <item name="stTextSize">16sp</item>
        <item name="stColorBackground">@android:color/holo_orange_dark</item>
        <item name="stSolidBackground">false</item>
        <item name="stIconStart">@drawable/ic_info_white</item>
        <item name="stLength">LONG</item>
        <item name="stRadius">20dp</item>
    </style>
</resources>